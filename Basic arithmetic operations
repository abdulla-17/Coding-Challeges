#include <stdio.h>

int main() {
    float num1, num2, add, sub, mul, div;

    // Input numbers
    printf("Enter the first number: ");
    scanf("%f", &num1);
    printf("Enter the second number: ");
    scanf("%f", &num2);

    add = num1 + num2;
    sub = num1 - num2;
    mul = num1 * num2;
    
    
    printf("The result of addition is: %.2f\n", add);
    printf("The result of subtraction is: %.2f\n", sub);
    printf("The result of multiplication is: %.2f\n", mul);

    
    if (num2 != 0) {
        div = num1 / num2;
        printf("The result of division is: %.2f\n", div);
    } else {
        printf("The result of division is undefined (cannot divide by zero).\n");
    }

    return 0;
}
